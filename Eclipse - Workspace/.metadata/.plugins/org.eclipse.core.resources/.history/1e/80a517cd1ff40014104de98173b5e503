package br.ufs.dsi.redes_sensores.model;

import java.util.ArrayList;

public class Vertice {
	
	private int cor;
	private int identificador;
	private ArrayList<Vertice> vizinhosUmSalto;
	
	// Métodos Construtores
	public Vertice(){
		setCor(-1);
		setIdentificador(-1);
		setVizinhosUmSalto(null);
	}

	// Métodos Gets e Sets
	public int getCor() {
		return cor;
	}

	public void setCor(int cor) {
		this.cor = cor;
	}

	public int getIdentificador() {
		return identificador;
	}

	public void setIdentificador(int identificador) {
		this.identificador = identificador;
	}

	public ArrayList<Vertice> getVizinhosUmSalto() {
		return vizinhosUmSalto;
	}

	public void setVizinhosUmSalto(ArrayList<Vertice> vizinhosUmSalto) {
		this.vizinhosUmSalto = vizinhosUmSalto;
	}
}
